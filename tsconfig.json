{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "types/**/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/page.jsx",
    "src/app/api/moviegenreList/route.ts",
    "src/app/contextAPI/userPrefrence.tsx",
    "postcss.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}